@inject ShoppingCartState ShoppingCartState

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="#">SynthMania</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        Home
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="Products">
                        Products
                    </NavLink>
                </li>
            </ul>
            <form class="d-flex">
                <NavLink class="btn btn-outline-primary" href="ShoppingCart">
                    <i class="oi oi-basket"></i>
                    <p>@ShoppingCartState.Count</p>
                </NavLink>
            </form>
        </div>
    </div>
</nav>


@code {

    private void OnCartChanged(object sender, CartChangedEventArgs e)
    {
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        ShoppingCartState.CartChanged += OnCartChanged;
    }

}

